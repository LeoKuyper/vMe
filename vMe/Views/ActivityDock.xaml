<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="vMe.Views.ActivityDock">
    <ContentView.Content>
        <StackLayout 
                     HeightRequest="200" Padding="0" 
                     BackgroundColor="#2d3047" HorizontalOptions="End" x:Name="dockContainer">
               
               <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                   <StackLayout VerticalOptions="CenterAndExpand"
                     HeightRequest="200" Padding="0" >

                   </StackLayout>

                   <RelativeLayout BackgroundColor="#F2E74B" Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand"
                                   Margin="10, 20, 0, 0" HeightRequest="180"
                                   x:Name="waterLevel">
                       <ImageButton Source="waterDrop"
                              VerticalOptions="CenterAndExpand"
                              HorizontalOptions="EndAndExpand"
                              Margin="6, 40, 0, 20" BackgroundColor="Transparent"
                                    Clicked="waterTapped">
                              </ImageButton>
                   </RelativeLayout>

                   <RelativeLayout BackgroundColor="#ff220c" Grid.Row="0" Grid.Column="1" VerticalOptions="CenterAndExpand"
                                   Margin=" 5, 20, 5, 0" HeightRequest="180"
                                   x:Name="runningLevel">
                       <ImageButton Source="runningMan"
                              VerticalOptions="CenterAndExpand"
                              HorizontalOptions="EndAndExpand"
                              Margin="3, 40, 3, 20" BackgroundColor="Transparent"
                                    Clicked="runningTapped">
                              </ImageButton>
                   </RelativeLayout>

                   <RelativeLayout BackgroundColor="#f4f1de" Grid.Row="0" Grid.Column="2" VerticalOptions="CenterAndExpand"
                                   Margin="0, 20, 10, 0" HeightRequest="180"
                                   x:Name="batteryLevel">
                       <ImageButton Source="battery"
                              VerticalOptions="CenterAndExpand"
                              HorizontalOptions="EndAndExpand"
                              Margin="6, 40, 0, 20" BackgroundColor="Transparent"
                                    Clicked="batteryTapped">
                              </ImageButton>
                   </RelativeLayout>

                </Grid>



        </StackLayout>
    </ContentView.Content>
</ContentView>
