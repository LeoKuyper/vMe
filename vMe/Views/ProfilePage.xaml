<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="vMe.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#2e86ab">
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Padding="0" Margin="0, 30, 0, 0">
            <Image Source="idle_robot" VerticalOptions="CenterAndExpand"
                   HeightRequest="440"></Image>

        </StackLayout>

            <StackLayout 
                     HeightRequest="200" Padding="0" WidthRequest="600" 
                     BackgroundColor="#2d3047" HorizontalOptions="End">
                <Label Text="I am feeling good!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="White" FontAttributes="Bold"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
